<Window x:Class="CodeQr_Personnalisation.View.VueEnregistrement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeQr_Personnalisation.View"
        mc:Ignorable="d"
        Title="VueEnregistrement" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" x:Name="img_CodeQr" RenderOptions.BitmapScalingMode="NearestNeighbor"/>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Height="50" Width="150" FontSize="20" HorizontalAlignment="Center" Margin="10"
                    Content="Enregistrer"
                    Click="Click_Enregistrer"/>

            <Button Grid.Column="1" Height="50" Width="150" FontSize="20" HorizontalAlignment="Center" Margin="10"
                    Content="Annuler"
                    Click="Click_Annuler"/>
        </Grid>
    </Grid>
</Window>
